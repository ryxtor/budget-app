<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <nav class="navbar navbar-expand-lg border-bottom border-dark shadow-sm mb-3">
    <div class="container-fluid">
      <ul class="navbar-nav">
        <li class="nav-item h1">
          <%= link_to '<', 'javascript:history.back()', class: "nav-link ps-3 pe-3 text-white pt-0 pb-0" %>
        </li>
      </ul>
      <a class="navbar-brand text-white font-proxima-bold" href="#">REGISTER</a>
      <%= f.submit "Next", class: "btn text-white font-proxima-light" %>
    </div>
  </nav>
  <div class="d-flex flex-column">
    <%= f.text_field :name, placeholder: "Full name" , autocomplete: "name", class: "w-100 border border-light p-2 font-proxima-light" %>
    <%= f.email_field :email, placeholder: "Email", autocomplete: "email", class: "w-100 border border-light p-2 font-proxima-light" %>
    <%= f.password_field :password,
        autocomplete: "new-password",
        help: "(#{@minimum_password_length} characters minimum)", placeholder: "Password", class: "w-100 border border-light p-2 font-proxima-light" %>
    <%= f.password_field :password_confirmation,
        autocomplete: "new-password",
        label_class: "required", placeholder: "Password confirmation", class: "w-100 border border-light p-2 font-proxima-light" %>
  </div>
<% end %>
