<%= form_with url: group_fees_path, scope: :fee, method: :post do |f| %>
<nav class="navbar navbar-expand-lg border-bottom border-dark shadow">
  <div class="container-fluid">
    <ul class="navbar-nav">
        <li class="nav-item">
        <%= link_to '<', 'javascript:history.back()', class: "nav-link ps-3 pe-3 text-white" %>
        </li>
        </ul>
    <a class="navbar-brand text-white" href="#"><%= @title || BudgetApp %></a>
  <%= f.submit 'Add', class: "btn text-white" %>
  
  </div>
</nav>

  <%= f.text_field :name, placeholder: 'Transaction Name', class: "form-control" %>
  <%= f.number_field :amount, step: 0.01, placeholder: 'Amount', class: "form-control" %>
  <%= f.select :group_id, options_for_select(current_user.groups.map { |g| [g.name, g.id] }, selected: @group.id), {}, class: "form-control" %>
  <%= f.hidden_field :user_id, value: current_user.id %>
<% end %>
