<%= form_with url: group_fees_path, scope: :fee, method: :post do |f| %>
  <%= f.text_field :name, placeholder: 'Transaction Name', class: "form-control" %>
  <%= f.number_field :amount, step: 0.01, placeholder: 'Amount', class: "form-control" %>
  <%= f.select :group_id, options_for_select(current_user.groups.map { |g| [g.name, g.id] }, selected: @group.id), {}, class: "form-control" %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit 'Add Transaction', class: "btn btn-primary" %>
<% end %>
